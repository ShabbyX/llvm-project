import("//build_overrides/llvm.gni")

# clangd/support contains low-level support libraries that do not depend
# on clang either programmatically or conceptually.
static_library("support") {
  output_name = "clangdSupport"
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/build/libs/atomic",
  ]
  include_dirs = [ ".." ]
  sources = [
    "Cancellation.cpp",
    "Context.cpp",
    "FileCache.cpp",
    "Logger.cpp",
    "Markup.cpp",
    "MemoryTree.cpp",
    "Path.cpp",
    "Shutdown.cpp",
    "ThreadCrashReporter.cpp",
    "Threading.cpp",
    "ThreadsafeFS.cpp",
    "Trace.cpp",
  ]
}
