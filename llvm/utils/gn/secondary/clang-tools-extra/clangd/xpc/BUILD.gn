import("//build_overrides/llvm.gni")

static_library("conversions") {
  output_name = "clangdXpcJsonConversions"
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [
    "//${llvm_build_root}/secondary/clang-tools-extra/clangd",
    "//${llvm_build_root}/secondary/clang-tools-extra/clangd/support",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
  ]
  include_dirs = [ ".." ]
  sources = [ "Conversion.cpp" ]
}

static_library("transport") {
  output_name = "clangdXpcTransport"
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [
    ":conversions",
    "//${llvm_build_root}/secondary/clang-tools-extra/clangd",
    "//${llvm_build_root}/secondary/clang-tools-extra/clangd:features",
    "//${llvm_build_root}/secondary/clang-tools-extra/clangd/support",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
  ]
  include_dirs = [ ".." ]
  sources = [ "XPCTransport.cpp" ]
}
