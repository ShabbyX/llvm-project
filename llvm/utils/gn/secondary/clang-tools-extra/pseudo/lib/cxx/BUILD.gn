import("//build_overrides/llvm.gni")

static_library("cxx") {
  output_name = "clangPseudoCXX"
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [
    "//${llvm_build_root}/secondary/clang-tools-extra/pseudo/lib/grammar",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
  ]

  # public_deps because this target's public headers include generated headers.
  public_deps = [ "//${llvm_build_root}/secondary/clang-tools-extra/pseudo/include:cxx_gen" ]
  include_dirs = [ "../../include" ]
  sources = [ "CXX.cpp" ]
}
