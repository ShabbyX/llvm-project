import("//build_overrides/llvm.gni")

executable("c-index-test") {
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [
    "//${llvm_build_root}/secondary/clang/include/clang/Config",
    "//${llvm_build_root}/secondary/clang/lib/AST",
    "//${llvm_build_root}/secondary/clang/lib/Basic",
    "//${llvm_build_root}/secondary/clang/lib/CodeGen",
    "//${llvm_build_root}/secondary/clang/lib/Frontend",
    "//${llvm_build_root}/secondary/clang/lib/Index",
    "//${llvm_build_root}/secondary/clang/lib/Serialization",
    "//${llvm_build_root}/secondary/clang/tools/libclang",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/build/libs/xml",
  ]
  if (host_os != "win") {
    cflags_c = [ "-std=gnu89" ]
  }
  sources = [
    "c-index-test.c",
    "core_main.cpp",
  ]

  # See comment at top of clang/tools/libclang/BUILD.gn for why this isn't
  # needed on Linux.
  if (host_os == "mac") {
    ldflags = [ "-Wl,-rpath,@loader_path/../lib" ]
  }
}
