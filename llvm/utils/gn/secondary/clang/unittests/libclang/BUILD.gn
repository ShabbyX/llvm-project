import("//build_overrides/llvm.gni")

import("//${llvm_build_root}/secondary/third-party/unittest/unittest.gni")

unittest("libclangTests") {
  configs += [ "//${llvm_build_root}/build:clang_code" ]
  deps = [ "//${llvm_build_root}/secondary/clang/tools/libclang" ]
  sources = [ "LibclangTest.cpp" ]
  if (host_os == "mac") {
    ldflags = [ "-Wl,-rpath," + rebase_path("$root_out_dir/lib") ]
  }
}
