import("//build_overrides/llvm.gni")

static_library("gdb-server") {
  output_name = "lldbPluginPlatformGDB"
  configs += [
    "//${llvm_build_root}build:clang_code",
    "//${llvm_build_root}build:lldb_code",
  ]
  deps = [
    "//${llvm_root}lldb/source/Breakpoint",
    "//${llvm_root}lldb/source/Core",
    "//${llvm_root}lldb/source/Host",
    "//${llvm_root}lldb/source/Plugins/Process/Utility",

    #"//${llvm_root}lldb/source/Plugins/Process/gdb-remote",  # 4-deep dependency cycle
    "//${llvm_root}lldb/source/Target",
  ]

  # Reaches into Plugins/Process/Utility.
  include_dirs = [ "//${llvm_root}lldb/source" ]
  sources = [ "PlatformRemoteGDBServer.cpp" ]
}
