import("//build_overrides/llvm.gni")

import("//${llvm_root}llvm/utils/TableGen/tablegen.gni")

tablegen("AVRGenDisassemblerTables") {
  visibility = [ ":Disassembler" ]
  args = [ "-gen-disassembler" ]
  td_file = "../AVR.td"
}

static_library("Disassembler") {
  output_name = "LLVMAVRDisassembler"
  deps = [
    ":AVRGenDisassemblerTables",
    "//${llvm_root}llvm/lib/CodeGen",
    "//${llvm_root}llvm/lib/MC/MCDisassembler",
    "//${llvm_root}llvm/lib/Support",
    "//${llvm_root}llvm/lib/Target/AVR:LLVMAVRCodeGen",
    "//${llvm_root}llvm/lib/Target/AVR/MCTargetDesc",
    "//${llvm_root}llvm/lib/Target/AVR/TargetInfo",
  ]
  include_dirs = [ ".." ]
  sources = [ "AVRDisassembler.cpp" ]
}
