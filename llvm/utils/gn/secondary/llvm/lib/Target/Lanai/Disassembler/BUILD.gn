import("//build_overrides/llvm.gni")

import("//${llvm_root}llvm/utils/TableGen/tablegen.gni")

tablegen("LanaiGenDisassemblerTables") {
  visibility = [ ":Disassembler" ]
  args = [ "-gen-disassembler" ]
  td_file = "../Lanai.td"
}

static_library("Disassembler") {
  output_name = "LLVMLanaiDisassembler"
  deps = [
    ":LanaiGenDisassemblerTables",
    "//${llvm_root}llvm/lib/CodeGen",
    "//${llvm_root}llvm/lib/MC/MCDisassembler",
    "//${llvm_root}llvm/lib/Support",
    "//${llvm_root}llvm/lib/Target/Lanai/MCTargetDesc",
    "//${llvm_root}llvm/lib/Target/Lanai/TargetInfo",
  ]
  include_dirs = [ ".." ]
  sources = [ "LanaiDisassembler.cpp" ]
}
