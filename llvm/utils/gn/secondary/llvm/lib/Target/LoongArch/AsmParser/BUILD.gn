import("//build_overrides/llvm.gni")

import("//${llvm_root}llvm/utils/TableGen/tablegen.gni")

tablegen("LoongArchGenAsmMatcher") {
  visibility = [
    ":AsmParser",
    "//${llvm_root}llvm/lib/Target/LoongArch:LLVMLoongArchCodeGen",
  ]
  args = [ "-gen-asm-matcher" ]
