}

static_library("Disassembler") {
  output_name = "LLVMMipsDisassembler"
  deps = [
    ":MipsGenDisassemblerTables",
    "//${llvm_build_root}/secondary/llvm/lib/MC/MCDisassembler",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/secondary/llvm/lib/Target/Mips/MCTargetDesc",
    "//${llvm_build_root}/secondary/llvm/lib/Target/Mips/TargetInfo",
  ]
  include_dirs = [ ".." ]
  sources = [ "MipsDisassembler.cpp" ]
}
