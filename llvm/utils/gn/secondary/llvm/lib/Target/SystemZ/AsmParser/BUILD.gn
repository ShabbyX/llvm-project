    "//${llvm_root}llvm/lib/Target/SystemZ/MCTargetDesc",
    "//${llvm_root}llvm/lib/Target/SystemZ/TargetInfo",
  ]
  include_dirs = [ ".." ]
  sources = [ "SystemZAsmParser.cpp" ]
}
