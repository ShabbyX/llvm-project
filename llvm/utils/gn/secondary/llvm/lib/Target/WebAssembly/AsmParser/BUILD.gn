    ":WebAssemblyGenAsmMatcher",
    "//${llvm_build_root}/secondary/llvm/lib/CodeGen",
    "//${llvm_build_root}/secondary/llvm/lib/MC",
    "//${llvm_build_root}/secondary/llvm/lib/MC/MCParser",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/secondary/llvm/lib/Target/WebAssembly/MCTargetDesc",
    "//${llvm_build_root}/secondary/llvm/lib/Target/WebAssembly/TargetInfo",
    "//${llvm_build_root}/secondary/llvm/lib/Target/WebAssembly/Utils",
    "//${llvm_build_root}/secondary/llvm/lib/TargetParser",
  ]
  include_dirs = [ ".." ]
  sources = [
    "WebAssemblyAsmParser.cpp",
    "WebAssemblyAsmTypeCheck.cpp",
  ]
}
