import("//build_overrides/llvm.gni")

import("//${llvm_root}llvm/utils/TableGen/tablegen.gni")

tablegen("X86GenDisassemblerTables") {
  visibility = [ ":Disassembler" ]
  args = [ "-gen-disassembler" ]
  td_file = "../X86.td"
}

static_library("Disassembler") {
  output_name = "LLVMX86Disassembler"
  deps = [
    ":X86GenDisassemblerTables",
    "//${llvm_root}llvm/lib/MC/MCDisassembler",
    "//${llvm_root}llvm/lib/Support",
    "//${llvm_root}llvm/lib/Target/X86/MCTargetDesc",
    "//${llvm_root}llvm/lib/Target/X86/TargetInfo",
  ]
  include_dirs = [ ".." ]
  sources = [ "X86Disassembler.cpp" ]
}
