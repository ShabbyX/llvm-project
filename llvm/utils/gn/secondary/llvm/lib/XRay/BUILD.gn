    "FileHeaderReader.cpp",
    "InstrumentationMap.cpp",
    "LogBuilderConsumer.cpp",
    "Profile.cpp",
    "RecordInitializer.cpp",
    "RecordPrinter.cpp",
    "Trace.cpp",
  ]
