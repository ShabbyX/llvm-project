import("//build_overrides/llvm.gni")

executable("llvm-c-test") {
  deps = [
    "//${llvm_root}llvm/lib/Bitcode/Reader",
    "//${llvm_root}llvm/lib/IR",
    "//${llvm_root}llvm/lib/MC/MCDisassembler",
    "//${llvm_root}llvm/lib/Object",
    "//${llvm_root}llvm/lib/Support",
    "//${llvm_root}llvm/lib/Target",
    "//${llvm_root}llvm/lib/Target:TargetsToBuild",
  ]
  if (host_os != "win") {
    cflags_c = [
      "-std=gnu99",
      "-Wstrict-prototypes",
    ]
  }
  sources = [
    "attributes.c",
    "calc.c",
    "debuginfo.c",
    "diagnostic.c",
    "disassemble.c",
    "echo.cpp",
    "helpers.c",
    "include-all.c",
    "main.c",
    "metadata.c",
    "module.c",
    "object.c",
    "targets.c",
  ]
}
