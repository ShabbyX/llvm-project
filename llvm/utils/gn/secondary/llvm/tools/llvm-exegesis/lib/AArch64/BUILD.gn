import("//build_overrides/llvm.gni")

import("//${llvm_build_root}/secondary/llvm/utils/TableGen/tablegen.gni")

tablegen("AArch64GenExegesis") {
  args = [ "-gen-exegesis" ]
  td_file = "//${llvm_build_root}/secondary/llvm/lib/Target/AArch64/AArch64.td"
}

static_library("AArch64") {
  output_name = "LLVMExegesisAArch64"
  deps = [
    ":AArch64GenExegesis",
    "//${llvm_build_root}/secondary/llvm/lib/CodeGen",

    # Exegesis reaches inside the Target/AArch64 tablegen internals and must
    # depend on these Target/AArch64-internal build targets.
    "//${llvm_build_root}/secondary/llvm/lib/Target/AArch64/MCTargetDesc",
    "//${llvm_build_root}/secondary/llvm/lib/Target/AArch64/Utils",
  ]
  sources = [ "Target.cpp" ]
  include_dirs = [ "//${llvm_build_root}/secondary/llvm/lib/Target/AArch64" ]
}
