import("//build_overrides/llvm.gni")

import("//${llvm_root}llvm/utils/TableGen/tablegen.gni")

tablegen("PPCGenExegesis") {
  args = [ "-gen-exegesis" ]
  td_file = "//${llvm_root}llvm/lib/Target/PowerPC/PPC.td"
}

static_library("PowerPC") {
  output_name = "LLVMExegesisPowerPC"
  deps = [
    ":PPCGenExegesis",
    "//${llvm_root}llvm/lib/CodeGen",
    "//${llvm_root}llvm/lib/TargetParser",

    # Exegesis reaches inside the Target/PowerPC tablegen internals and must
    # depend on these Target/PowerPC-internal build targets.
    "//${llvm_root}llvm/lib/Target/PowerPC/MCTargetDesc",
  ]
  sources = [ "Target.cpp" ]
  include_dirs = [ "//${llvm_root}llvm/lib/Target/PowerPC" ]
}
