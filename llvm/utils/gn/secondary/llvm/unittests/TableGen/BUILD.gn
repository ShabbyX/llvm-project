import("//build_overrides/llvm.gni")

import("//${llvm_build_root}/secondary/llvm/utils/TableGen/tablegen.gni")
import("//${llvm_build_root}/secondary/third-party/unittest/unittest.gni")

tablegen("AutomataAutomata") {
  visibility = [ ":TableGenTests" ]
  args = [ "-gen-automata" ]
  td_file = "Automata.td"
}

tablegen("AutomataTables") {
  visibility = [ ":TableGenTests" ]
  args = [ "-gen-searchable-tables" ]
  td_file = "Automata.td"
}

unittest("TableGenTests") {
  deps = [
    ":AutomataAutomata",
    ":AutomataTables",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/secondary/llvm/lib/TableGen",
    "//${llvm_build_root}/secondary/llvm/utils/TableGen/GlobalISel",
  ]
  include_dirs = [ "//${llvm_build_root}/secondary/llvm/utils/TableGen" ]
  sources = [
    "AutomataTest.cpp",
    "CodeExpanderTest.cpp",
    "ParserEntryPointTest.cpp",
  ]
}
