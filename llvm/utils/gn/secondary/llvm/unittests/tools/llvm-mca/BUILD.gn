import("//build_overrides/llvm.gni")

import("//${llvm_build_root}/secondary/llvm/lib/Target/targets.gni")
import("//${llvm_build_root}/secondary/third-party/unittest/unittest.gni")

unittest("LLVMMCATests") {
  deps = [
    "//${llvm_build_root}/secondary/llvm/lib/MC",
    "//${llvm_build_root}/secondary/llvm/lib/MCA",
    "//${llvm_build_root}/secondary/llvm/lib/Object",
    "//${llvm_build_root}/secondary/llvm/lib/Support",
    "//${llvm_build_root}/secondary/llvm/lib/TargetParser",
  ]
  if (llvm_build_X86) {
    deps += [ "X86" ]
  }

  sources = [ "MCATestBase.cpp" ]

  # FIXME: Why is this so complicated in the cmake file?
  mca_views_sources = [ "SummaryView.cpp" ]
  foreach(s, mca_views_sources) {
    sources += [ "//${llvm_build_root}/secondary/llvm/tools/llvm-mca/Views/" + s ]
  }
  include_dirs = [ "//${llvm_build_root}/secondary/llvm/tools/llvm-mca" ]
}
